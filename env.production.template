# ===== 生产环境配置模板 =====
# 请在 Render Dashboard 中设置这些环境变量

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Replicate API 配置（用于 Whisper 音频转录）
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Cloudflare R2 存储配置（用于知识库）
# 使用CLOUDFLARE_R2_*前缀的环境变量（推荐）
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_r2_bucket_name_here
CLOUDFLARE_R2_ENDPOINT=your_r2_endpoint_here
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here

# 或者使用简化的环境变量（向后兼容）
# R2_ACCESS_KEY_ID=your_r2_access_key_here
# R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
# BUCKET_NAME=your_r2_bucket_name_here
# CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# 服务器配置
NODE_ENV=production
PORT=10000

# CORS 配置（前端域名）
FRONTEND_URL=https://your-frontend-app.vercel.app 